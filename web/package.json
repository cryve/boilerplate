{
  "private": true,
  "name": "boilerplate",
  "version": "3.3.0",
  "license": "ISC",
  "repository": "mehmetkose/boilerplate",
  "author": {
    "name": "Mehmet Kose",
    "email": "mehmet.py@gmail.com",
    "url": "https://mehmetkose.github.io"
  },
  "scripts": {
    "test": "eslint src && preact test",
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "serve": "preact build && preact serve",
    "build": "preact build --no-prerender --template ./src/index.html",
    "dev": "preact watch --template ./src/index.html --https --port 8888",
    "deploy": "yarn build && firebase deploy --only hosting",
    "web:prepare": "mkdir -p ./desktop/dist/ && rm -rf ./desktop/dist/* && npm run build && cp ./build/bundle.*.js ./desktop/dist/bundle.js && cp ./build/polyfills.*.js ./desktop/dist/polyfills.js && cp ./build/style.*.css ./desktop/dist/style.css"
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor"
  },
  "devDependencies": {
    "eslint": "^4.16.0",
    "eslint-config-synacor": "^2.1.0",
    "favicons-webpack-plugin": "^0.0.7",
    "html-webpack-inline-source-plugin": "^0.0.9",
    "html-webpack-plugin": "^2.30.1",
    "if-env": "^1.0.0",
    "node-sass": "^4.7.2",
    "preact-cli": "^2.1.1",
    "sass-loader": "^6.0.6"
  },
  "dependencies": {
    "ganalytics": "^3.0.0",
    "preact": "^8.2.7",
    "preact-compat": "^3.18.0",
    "preact-photon": "^1.3.0",
    "preact-router": "^2.6.0",
    "preact-tap-event-plugin": "^0.1.2"
  }
}
